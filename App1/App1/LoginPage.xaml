<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Login"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label Text="Username" VerticalOptions="Center" HorizontalOptions="Center" AnchorX="20" AnchorY="20"/>
            <Entry x:Name="PasswordField" IsPassword="True" HorizontalOptions="Center" VerticalOptions="Center" AnchorX="50" AnchorY="20"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>