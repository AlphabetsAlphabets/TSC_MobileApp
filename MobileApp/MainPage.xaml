<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label x:Name ="statusBar" Text="Transaction" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Label Text="Printing" FontSize="Large" HorizontalOptions="Center" VerticalOptions="Center"
               TranslationX="-130" TranslationY="5"/>

        <Button Text="Print text" Clicked="PrintText" HorizontalOptions="Center" VerticalOptions="Center"
                TranslationX="-25" TranslationY="-40"/>

        <Button Text="Print Images" Clicked="PrintImages" HorizontalOptions="Center" VerticalOptions="Center"
                TranslationX="100" TranslationY="-92"/>

        <Label Text="Upload images" FontSize="Large" HorizontalOptions="Center" VerticalOptions="Center"
               TranslationX="-100" TranslationY="-80"/>

        <Button Text="Upload image(s)" Clicked="UploadImage" HorizontalOptions="Center" VerticalOptions="Center"
                TranslationX="65" TranslationY="-120"/>

        <Button Text="Take picture" Clicked="TakePicture" HorizontalOptions="Center" VerticalOptions="Center"
                TranslationX="50" TranslationY="-120"/>

        <Label Text="Geolocation" FontSize="Large" HorizontalOptions="Center" VerticalOptions="Center"
            TranslationX="-110" TranslationY="-120"/>
        
        <Button Text="In compound?" Clicked="InArea" HorizontalOptions="Center" VerticalOptions="Center"
                TranslationX="-110" TranslationY="-120"/>

        <Label Text="SQLITE3" HorizontalOptions="Center" VerticalOptions="Center" FontSize="Large"
               TranslationX="-110" TranslationY="-132"/>

        <Button Text="Connect to Database" Clicked="EstablishConnection" HorizontalOptions="Center" VerticalOptions="Center"
                TranslationX="-80" TranslationY="-129"/>

        <Label Text="QR Code" FontSize="Large" HorizontalOptions="Center" VerticalOptions="Center"
               TranslationX="-120" TranslationY="-120"/>

        <Button Text="Scan QR code" Clicked="ScanQRCode" HorizontalOptions="Center" VerticalOptions="Center"
                TranslationX="50" TranslationY="-169"/>

        <Entry x:Name="StringEntry" Text="Text to print" HorizontalOptions="Center" VerticalOptions="Center"
               TranslationX="-100" TranslationY="-100"/>
        <Button Text="Print string" HorizontalOptions="Center" VerticalOptions="Center" Clicked="PrintString"
                TranslationX="90" TranslationY="-150"/>

        <Label Text="Test features" HorizontalOptions="Center" VerticalOptions="Center" FontSize="Large"
               TranslationY="-150"/> 
        <Button Text="Test new feature" Clicked="Test" HorizontalOptions="Center" VerticalOptions="Center"
                TranslationY="-150"/>
    </StackLayout>

</ContentPage>
