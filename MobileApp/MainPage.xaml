<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label x:Name ="statusBar" Text="Transaction" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Button Text="Pick Image(s)" Clicked="Upload_Image" HorizontalOptions="Center" VerticalOptions="Center"
                TranslationX="-120" TranslationY="0"/>

        <Button Text="Connect to Database" Clicked="Establish_Connection" HorizontalOptions="Center" VerticalOptions="Center"
                TranslationX="75" TranslationY="-52"/>

        <Button Text="Scan QR code" Clicked="Scan_QR_Code" HorizontalOptions="Center" VerticalOptions="Center"
                TranslationX="-120" TranslationY="-52"/>

        <Button Text="In compound?" Clicked="In_Area" HorizontalOptions="Center" VerticalOptions="Center"
                TranslationX="75" TranslationY="-100"/>

        <Button Text="Take picture" Clicked="Take_Picture" HorizontalOptions="Center" VerticalOptions="Center"/>
        <Button Text="Print" Clicked="Print_Content" HorizontalOptions="Center" VerticalOptions="Center"/>
        <SelectableItemsView></SelectableItemsView>
    </StackLayout>

</ContentPage>
